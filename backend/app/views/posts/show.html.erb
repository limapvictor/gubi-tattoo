<h1>Posts</h1>

<p><b>Titulo:  </b><%=@post.titulo %></p>

<p>
  <% if @post.foto.attached? %>
  <img src ="<%=(url_for(@post.foto))%>">

  <% else %>
  <%= "nao possui foto." %>

  <% end %>
</p>

<p>
  <h4>Tags:</h4>
  <ul>
  <% @post.tag_list.each do |tag| %>
    <li><%= tag %></li>
  <% end %>
  </ul>
</p>

<p>
  <h4> Posts relacionados: </h4>
    <ul>
      <% @posts_relacionados.each do |relacionado| %>
        <li><%= link_to relacionado.titulo, relacionado %></li>
      <% end %>
    </ul>
  </h4>
</p>



<br><br>
<% if logado? && @post.usuario == usuario_atual %>
<%= link_to 'Editar', edit_post_path(@post) %>
<%= link_to 'Deletar', post_path(@post), method: :delete, data: {confirm: "VocÃª tem certeza?"} %>
<% end %>
<%= link_to 'Voltar', posts_path %>
