<% if logado? && usuario_atual.TipoDeConta == 'Tatuador' %>

   <h1> Criar um post novo: </h1>

   <% if @post.errors.any? %>
      <ul>
      <% @post.errors.full_messages.each do |msg| %>
         <li> <%= msg %> 
      <% end %>
      </ul>
   <% end %>



   <%= form_with scope: :post, url: posts_path, local: true do |form| %>

   <p>
   <%= form.label "Titulo: " %>
   <%= form.text_field :titulo %>
   </p>

   <div class="field">
      <%= form.label "Foto: " %>
      <%= form.file_field :foto %>
   </div>

   <div class="field">
      <%= form.label "Tags: " %>
      <%= form.text_field :tag_list %>
   </div>

   <%= form.submit "Salvar post" %>

   <% end %>

<% else %>
<h1> Seu tipo de conta não dá permissão para acessar essa página. </h1>

<%= link_to 'Voltar', posts_path %>
<%end%>